<div class="display-signUp-form">
    <p><i class="fas fa-sign-in-alt acc-icon"></i> Sign In To Access Skyinyou</p>
    <form action="/users/create-session" method="post">
        <div>
            <!-- <label for="email">Email:</label> -->
            <input type="email" id="email" name="email" required placeholder="Enter your email......">
        </div>
        <div>
            <!-- <label for="pwd">Password:</label> -->
            <input type="password" id="pwd" name="password" required placeholder="Enter your password......">
        </div>
        <div class="btn">
            <button type="submit">Sign In</button>
        </div>
    </form>
    <div class="other-signins">
        <a href="/users/forget-password" class="forget-password">
            <i class="fas fa-unlock-alt " style="margin-right: 15px;"></i>
            <span class="btn">Forget Password</span>
        </a>
        <a href="/users/auth/google" class="google-signin">
           <img src="/images/googleicon.png">
            <span class="btn">Sign In Using Google</span>
        </a>
    </div>
</div>

