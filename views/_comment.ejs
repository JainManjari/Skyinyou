

<li id="comment-<%= comment._id %>" class="comment-list">

    <div class="like-box">
       <a class="toggle-like-button" href="/likes/toggle/?id=<%=comment._id%>&type=Comment" data-likes="<%= comment.likes.length %>">
        <%= comment.likes.length %> <i class="fas fa-thumbs-up like-thumbs"></i>
   
       </a>
       <div class="comment-view-likes"   data-target="#comment-<%= comment._id %>-likes" data-toggle="collapse">
        View Likes
        </div>
    
        <ul id="comment-<%= comment._id %>-likes" class="comment-like-username-list collapse" >
                <% for(like of comment.likes) {%>
                    <li id="like-<%= like._id %>" class="comment-username-li">
                        
                        <a href="/users/profile/<%= like.user._id %>"><%= like.user.name %></a>
                        
                    </li>
                <% } %>
        
        </ul>
    </div>
    <% if(locals.user.id==comment.user.id) { %>
        <small class="comment-deletion">
            <a href="/comments/destroy-comment/<%= comment._id %>" class="delete-comment-button">
                <i class="fas fa-times"></i></a>
        </small>
    <% } %>
    <div class="content">
       
       
        <p>
           
            <span><%= comment.content %></span>
            <br>
            <small class="author-comment-name">
                <a href="/users/profile/<%= comment.user._id %>">
                    <% if(comment.user.avatar) {%>
                        <img src="<%= comment.user.avatar %>"> 
                <% } else if (comment.user.gender=="male"){%>
                            <img src="https://i.stack.imgur.com/HQwHI.jpg" width="100" height="100">
                <% }  else {%>
                            <img src="/images/femaleProfile.png" width="100" height="100">
                    <% } %>
                    <% if(comment.user.id==i.user.id) { %>
                        <%= comment.user["name"] %><span class="author-tag" style="width: 45px;"> Author</span>
                        
                    <% } else { %>
                    
                            <%= comment.user["name"] %>
                        
                    <% } %>
                </a>
            </small>
            <br>
            <span class="comment-timestamps">
                <%= comment.createdAt.toLocaleString() %> 
            </span>
        </p>
    </div>
</li>