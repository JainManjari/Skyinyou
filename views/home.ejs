<link rel="stylesheet" type="text/css" href="/css/home.css">

<h1> Homepage </h1>


<div class="home-container">

    <% if(locals.user) { %> 
        <!-- <%= locals.user._id%> -->
        
            <section id="feed-posts">
                <h4>Posts</h4>

                <form id="new-post-form" method="post" action="/posts/create-post">
                    <textarea name="content" id="new-post-content" required cols="30" rows="3" placeholder="Type here..."></textarea>
                    <br>
                    <button type="submit">Post</button>
                </form>
                <div id="posts-list-container">
                    <ul>
                        <% for(i of posts) { %>

                            <%- include('_post') -%>
                                        
                        <% } %>
                    </ul>
                </div>
            </section>
        
            <section id="user-friends" >
                <h4>Friends</h4>
                <% for(u of all_users) { %> 
                    <p>
                        <a href="/users/profile/<%= u.id %>">
                            <%= u.name %>
                        </a>
                    </p>

                <% } %>
            </section>
      
    <% } else { %>
        <p style="font-size: 1.3rem;">Welcome to the Codeial. Kindly signup or signup!</p>
    <% } %>
</div>


    

