
<h1>Welcome <%= locals.user.name %> 
    <span class="emoji">
        <div class="eyes" id="left-eye"></div> <div class="eyes" id="right-eye"></div>
        <br>
        <div class="smile"></div>
    </span>! 
</h1>

<div class="home-container">
    <section id="feed-posts">
        <i><h2 class="animated fadeInDown"><i class="fas fa-newspaper" style="margin-right: 20px;"></i>Latest Feeds</h2></i>
        <div id="posts-list-container">
            <ul>
             
                <% for(i of posts) { %>
                    <%- include('_post') -%>
                                
                <% } %>

            </ul>
        </div>
    </section>

    <section id="user-friends" >
        <div id="friends">
            <h4>Friends</h4>
            <div id="user-friends-<%= user._id %>">
                <% for(u of user.friendships) { %> 
                    <p>
                        
                          
                                <a href="/users/profile/<%= u.toUser._id %>">
                                    <%= u.toUser.name %>
                                </a>
                           
                        
                    </p>

                <% } %>
            </div>
        </div>
        <div id="all-users">
            <h4>All Users</h4>
            <% for(u of all_users) { %>
                <% if(locals.user.id!=u.id ) { %> 
                    <p>
                        <a href="/users/profile/<%= u.id %>">
                            <%= u.name %>
                        </a>
                    </p>
                <% } %>
            <% } %>
        </div>
    </section>
    <%- include("_chat"); %>
   
</div>